{% extends 'base.html.twig' %}

{% block title %}Salut!{% endblock %}

{% block body %}
 <section class="articles">
     {% for article in articles %}
         <article>
             <h2>{{ article.title }}</h2>
            <div class="metadata">Ecrit le {{article.createdAt | date('d/m/Y') }}
                 à {{ article.createdAt | date('H:i') }} catégorie A</div>
            <div class="content">
                {{ article.description | raw }}
                <a href="{{ path('blog_show', {'id': article.id}) }}" class="btn btn-primary">Voir</a>
            </div>
         </article>
     {% endfor %}
 </section>
{% endblock %}
