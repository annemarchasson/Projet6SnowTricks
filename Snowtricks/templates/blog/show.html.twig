{% extends'base.html.twig' %}
{% block body %}
    <article>
        <h2>{{ article.title }}</h2>
        <div class="metadata">Ecrit le {{article.createdAt | date('d/m/Y') }}
            à {{ article.createdAt | date('H:i') }} dans la catégorie
            {{ article.category.title }}
        </div>


        <h2>Images</h2>
        {% for image in article.image %}
            <div>
                <img src="{{ asset('/uploads/'~image.name) }}" alt="" width="150">
            </div>
        {% endfor %}



        <h2>Description</h2>
        <div class="content">
            {{ article.description | raw }}
        </div>


        <h2>Vidéo</h2>
        <div>
            {% for video in article.video %}
                <div class="col-sm-4 col">
                    <embed src="{{ video.link }}"></embed>
                </div>
            {% endfor %}
        </div>

    </article>
{% endblock body %}